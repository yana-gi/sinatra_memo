<form action="/memos/<%= @id %>" method="post">
  <div class="form-group">
    <input type="text" name="memo_title" class="form-control" value="<%=@memo_list[@id]['title']%>">
  </div>
  <div class="form-group">
    <textarea class="form-control" name="memo_text" rows="10"><%= @memo_list[@id]["text"] %></textarea>
  </div>
  <div class="text-center">
    <input type="hidden" name="_method" value="patch">
    <input type="submit" class="btn bg-secondary text-light w-50" value="変更">
  </div>
</form>